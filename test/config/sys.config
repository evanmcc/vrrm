%% -*- erlang -*-

[{vrrm,
  [
   {manager_update_interval, 100}
  ]},
{lager, [{handlers, [{lager_console_backend,
                      [debug, {lager_default_formatter, [date, " ", time, " ", color, "[", severity, "] ",
                                                         {pid, ["pid=", pid], ""},
                                                         {module, [
                                                                  " module=", module, " ",
                                                                  {function, ["function=", function, " "], ""},
                                                                  {line, ["line=",line], ""}], ""},
                                                         " ", message, "\n"]}]}]}]}
].
